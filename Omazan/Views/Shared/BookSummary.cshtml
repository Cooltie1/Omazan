@model Books
 
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 style="color:cornflowerblue">@Model.Title</h2>
            <h5>@Model.Classification</h5>
            <small>@Model.Publisher (@Model.PageCount pages)</small>
            <br />
            <small>@Model.Isbn</small>
        </div>
        <div class="col-6 text-right d-flex flex-column justify-content-between">
            <h4>@Model.Author</h4>
            
            <h4 class="font-weight-bold">$@Model.Price</h4>
            <form method="post" asp-page="/Cart">
                <input type="hidden" asp-for="@Model.BookId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
            </form>
        </div>
    </div>

</div>
<hr />

