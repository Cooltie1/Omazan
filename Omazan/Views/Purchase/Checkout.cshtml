
@{
    ViewData["Title"] = "Checkout";
}

@model Purchase
<h1>Check Out</h1>

<form method="post" asp-action="Checkout">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" id="name" placeholder="John Smith">
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="email">Email</label>
            <input class="form-control" asp-for="email" id="email" placeholder="John.Smith@example.com">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Phone">Phone Number</label>
            <input asp-for="Phone" class="form-control" id="phone" placeholder="(000) 000-0000">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine1">Address</label>
        <input asp-for="AddressLine1" class="form-control" id="inputAddress" placeholder="1234 Main St">
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2">Address 2</label>
        <input asp-for="AddressLine2" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="City">City</label>
            <input asp-for="City" class="form-control" id="inputCity" placeholder="Los Angeles">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="State">State</label>
            <input asp-for="State" class="form-control" id="inputState" placeholder="California">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Country">Country</label>
            <input asp-for="Country" class="form-control" id="inputCountry" placeholder="US">
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Zip">Zip</label>
            <input asp-for="Zip" class="form-control" id="inputZip" placeholder="54321">
        </div>
    </div>
    <div class="float-end">
        <input class="btn btn-success" type="submit" value="Submit Order" />
    </div>
</form>