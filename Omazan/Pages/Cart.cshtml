@page
@model Omazan.Pages.CartModel
@{
}


<h2>My Cart</h2>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.basket.items)
        {
            <tr>
                <td>@item.book.Title</td>
                <td>@item.quantity</td>
                <td>@item.book.Price.ToString("c")</td>
                <td>@((item.book.Price * item.quantity).ToString("c"))</td>
                <td class="text-center" style="width: 40px">
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="bookId" value="@item.book.BookId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                    </form>
                </td>
            </tr>

        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total: </td>
            <td>@Model.basket.CalcTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>
<div class="d-flex justify-content-between m-auto w-100">
    <a class="btn btn-outline-primary" href="@Model.ReturnUrl">&larr; Back</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Purchase">Checkout</a>
</div>
